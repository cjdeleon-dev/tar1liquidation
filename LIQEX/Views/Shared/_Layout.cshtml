<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TARELCO I Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/css/main.css" rel="stylesheet" />
</head>
<body>
    <div class="vertical-nav" id="sidebar">
        <br />
        <div class="py-4 px-3 mb-4" style="text-align:center;">
            <div class="media d-flex align-items-center">
                <div class="media-body">
                    @{Html.RenderAction("UserInfo", "LoggedUser");}
                    <strong>
                        <a href="@Url.Action("Logout","Authentication")" class="nav-link text-danger">
                            <i class="fa-fw"></i>
                            Sign Out
                        </a>
                    </strong>
                </div>
            </div>
        </div>
        <hr style="border-color:darkred;" />

        <p class="text-black-50 font-weight-bold text-uppercase px-3 small pb-4 mb-0 text-center">MAIN MENU</p>

        <ul class="nav flex-column bg-white mb-0">
            <li class="nav-item">
                <a href="@Url.Action("Index","Dashboard")" class="nav-link font-italic">
                    <i class="glyphicon glyphicon-th-large mr-3 text-primary fa-fw"></i>
                    DASHBOARD
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index","Liquidation")" class="nav-link font-italic">
                    <i class="glyphicon glyphicon-floppy-disk mr-3 text-primary fa-fw"></i>
                    LIQUIDATION FORM
                </a>
            </li>

        </ul>
        <br />
        <p class="text-black-50 font-weight-bold text-uppercase px-3 small py-4 mb-0 text-center">MANAGEMENT</p>

        <ul class="nav flex-column bg-white mb-0">
            <li class="nav-item">
                <a href="@Url.Action("Users","Management")" class="nav-link font-italic">
                    <i class=" glyphicon glyphicon-user mr-3 text-primary fa-fw"></i>
                    USERS
                </a>
            </li>
        </ul>
    </div>
    <div class="page-content">
        @RenderBody()
        
        <footer class="navbar-fixed-bottom text-center">
            <hr />
            <p>&copy; 2023 - TARELCO I Application</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
