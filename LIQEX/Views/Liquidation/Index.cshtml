
@{
    ViewBag.Title = "Liquidation Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/myscripts/liquidation.js"></script>

<style>
    .mytxt {
        background-color: aliceblue;
        color: black;
    }
</style>

<div class="row">
    <div class="col-lg-offset-1 col-lg-10">
        <div class="text-center">
            <h3>LIQUIDATION FORM</h3>
            <hr />
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label for="txtPurpose">Purpose:</label>
                <input type="text" class="form-control mytxt" placeholder="Purpose" id="txtPurpose" style="max-width:100%;" />
            </div>
            <div class="col-lg-offset-4 col-lg-2">
                <label for="dtpDate">Date:</label>
                <input type="date" class="form-control mytxt" id="dtpDateFile" style="max-width:100%;" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-offset-10 col-lg-2">
                <input type="button" class="text-uppercase btn btn-info" id="btn" style="text-align:right;" onclick="showModal()" value="add particular" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-responsive">
                    <thead class="bg-primary">
                        <tr>
                            <td>DATE</td>
                            <td>PARTICULARS</td>
                            <td>ACCT CODE</td>
                            <td>Non-VATable Goods/Services</td>
                            <td>VATable Goods</td>
                            <td>VATable Services</td>
                            <td>Input VAT Goods</td>
                            <td>Input VAT Services</td>
                            <td>Amount Net of VAT</td>
                            <td>W/H TAX CODE</td>
                            <td>WITHOLDING TAX</td>
                            <td>AMOUNT</td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@*Modal for Input*@
<div class="container">
    <div class="modal fade" id="myModalInputs" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">X</button>
                    <h4 class="modal-title" id="myRptModalLabel">Input Particular</h4>
                </div>
                <div class="modal-body form-group">
                    <div class="row">
                        <div class="col-lg-3">
                            <label class="text-uppercase">Date:</label>
                            <input type="date" id="dtpDate" class="form-control" />
                        </div>
                        <div class="col-lg-9">
                            <label class="text-uppercase">Particular:</label>
                            <input type="text" id="txtParticular" class="form-control" placeholder="Particular" style="max-width:100%;" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-4">
                            <label class="text-uppercase">Select Account Code:</label>
                            <select class="form-control select2 select2-hidden-accessible" id="cboAcctCode"></select>
                        </div>
                        <div class="col-lg-8">
                            <label class="text-uppercase">Account Name:</label>
                            <input type="text" id="txtAcctName" class="form-control" placeholder="Account Name" style="max-width:100%;" disabled="disabled" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Add</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
